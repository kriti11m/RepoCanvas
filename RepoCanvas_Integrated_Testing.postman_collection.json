{
  "info": {
    "name": "RepoCanvas Integrated Pipeline",
    "description": "Complete testing suite for RepoCanvas Backend → Worker → Summarizer integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "backend_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "worker_url", 
      "value": "http://localhost:8002",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Checks",
      "item": [
        {
          "name": "Backend Health",
          "request": {
            "method": "GET",
            "url": "{{backend_url}}/health"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Backend is healthy', function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(pm.response.json().status).to.eql('healthy');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Worker Health Direct",
          "request": {
            "method": "GET",
            "url": "{{worker_url}}/health"
          }
        }
      ]
    },
    {
      "name": "2. Repository Processing",
      "item": [
        {
          "name": "Parse Repository",
          "request": {
            "method": "POST",
            "url": "{{backend_url}}/parse",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"repo_url\": \"https://github.com/octocat/Hello-World.git\",\n  \"branch\": \"main\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Parse job created', function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(pm.response.json().success).to.be.true;",
                  "    pm.expect(pm.response.json().job_id).to.exist;",
                  "    pm.collectionVariables.set('job_id', pm.response.json().job_id);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Check Job Status",
          "request": {
            "method": "GET",
            "url": "{{backend_url}}/status/{{job_id}}"
          }
        },
        {
          "name": "Parse and Index (Full Pipeline)",
          "request": {
            "method": "POST",
            "url": "{{backend_url}}/parse-and-index",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"repo_url\": \"https://github.com/octocat/Hello-World.git\",\n  \"branch\": \"main\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "3. Search & Analysis",
      "item": [
        {
          "name": "Semantic Search",
          "request": {
            "method": "POST",
            "url": "{{backend_url}}/search",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"hello world function\",\n  \"top_k\": 5\n}"
            }
          }
        },
        {
          "name": "Complete Analysis (Most Important)",
          "request": {
            "method": "POST",
            "url": "{{backend_url}}/analyze",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"how does the hello world program work\",\n  \"top_k\": 3,\n  \"include_summary\": true\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Analysis completed successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.snippets).to.be.an('array');",
                  "    pm.expect(response.query).to.exist;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Ask Question",
          "request": {
            "method": "POST",
            "url": "{{backend_url}}/ask",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What does this code do?\",\n  \"top_k\": 3\n}"
            }
          }
        }
      ]
    },
    {
      "name": "4. Job Management",
      "item": [
        {
          "name": "List All Jobs",
          "request": {
            "method": "GET",
            "url": "{{backend_url}}/jobs"
          }
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "url": "{{backend_url}}/jobs/{{job_id}}"
          }
        }
      ]
    },
    {
      "name": "5. Advanced",
      "item": [
        {
          "name": "Get Graph Data",
          "request": {
            "method": "GET",
            "url": "{{backend_url}}/graph"
          }
        },
        {
          "name": "Index Repository",
          "request": {
            "method": "POST",
            "url": "{{backend_url}}/index",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"collection_name\": \"test_collection\",\n  \"qdrant_url\": \"http://localhost:6333\",\n  \"graph_path\": \"data/graph.json\",\n  \"recreate_collection\": true\n}"
            }
          }
        }
      ]
    }
  ]
}